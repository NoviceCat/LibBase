<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.novice.base.widget.tablayout.SlidingTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            app:sl_indicator_color="#FC5044"
            app:sl_indicator_corner_radius="2dp"
            app:sl_indicator_height="4dp"
            app:sl_indicator_margin_top="2dp"
            app:sl_indicator_width="24dp"
            app:sl_indicator_width_equal_title="true"
            app:sl_tab_padding="0dp"
            app:sl_tab_space_equal="true"
            app:sl_textSelectColor="#222222"
            app:sl_textUnselectColor="#222222"
            app:sl_textsize="17sp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>